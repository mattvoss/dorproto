#world circle {
	z-index: 999;
}
svg#world-wrap path {
	fill: rgba(0,0,0,.5);
	stroke: rgba(220,255,255,.5);
	z-index: -1;
}
svg#world-wrap path:hover {
	fill: rgba(0,0,0,.7);
	cursor: pointer;
}
svg#world-wrap {
	height: 625px;
	width: 1024px;
	background: lightblue;
}
rect.bar {
	fill: steelblue;
	color: #fff;
}

#container { 
	position: relative; 
	clear: both;
}

.viz-title {
	font-family: "proxima-nova-condensed",sans-serif;	
	font-size: 32px;
	margin: 2em 0 0;
	border-bottom: 1px solid #ddd;
	padding: 10px 0;
}

#display { 
	position: absolute;
	top: 40px;
	left: 80px; 
	font-size: 28px;
	margin: 1em 0;
	background: rgba(255,255,180,.7);
	padding: 5px;	
}

circle.blue {
	fill: rgba(0,50,100, .3);
	stroke: rgba(255,255,255, .2);
}
#states path {
	fill: none;
	stroke: #fff;
	stroke-width: 1.5px;
}
#viz {
}
.svg, rect {
	background: #fff;
}
img {
	max-width: 100%;
	height: auto;
}

#map_canvas,
#map { 
	display: block; 
	height: 500px;
	width: 100%;
}
#map.tabs-map,
#map.water-map-viz {
	height: 400px;
	margin-bottom: 80px;
}
.gmnoprint {
	display: none;
}
#map .leaflet-popup-content-wrapper {
	border-radius: 3px;
}
.entry-content #map .leaflet-popup-content p,
.entry-content #map .leaflet-popup-content  {
	font-size: 12px;
	color: #666;
	width: 100%;	
}
.entry-content #map .leaflet-popup-content p  {
	margin-bottom: 5px;	
	margin-top: 0;
}
.water-map-viz path {
	fill: #f00;
	stroke: #333;
	stroke-width: 1px;
}