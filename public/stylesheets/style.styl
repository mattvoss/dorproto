$link1 = #A79B82
$copy_color = #666
@import('fonts');
@import('reset');
@import('globals');
@import('viz');

.site-title {
	display: block;
	width: 226px;
	height: 49px;
	float: left;
}
.site-title a {
	display: block;
	width: 226px;
	height: 49px;
	text-indent: -999em;
	background: url('/images/R@A&M-logo.png') no-repeat left 0px;
	float: left;
	padding-top: 5px;
	opacity: 1;
	-webkit-transition: opacity .3s ease;	
}
.site-title a:hover {
	opacity: .5;
}
.menu-button {
	float: right;
	cursor: pointer;
	color: #999;
	margin-top: 5px;
	padding: 10px 10px 5px;
	border-radius: 5px;
	border: 1px solid #ddd;
}
.menu-button span.iconic {
	font-size: 18px;
	color: #999;
	width: 100%;
	padding: 1px;
}
.menu-button.active {
	background: #332C2C url("/images/footer-background-style2.jpg");
	border: 1px solid #333;	
}
.menu-button.active span.iconic {
	color: #ccc;
}
[role="navigation"] {
	background: #332C2C url("/images/footer-background-style2.jpg");	
	clear: both;
	list-style: none;
	margin: 0;
	display: none;
	position: absolute;
	top: 53px;
	right: 5%;
	border-top-left-radius: 5px;
	border-bottom-left-radius: 5px;
	border-bottom-right-radius: 5px;		
	z-index: 3;
	width: 200px;
	box-shadow: 0 2px 15px rgba(0,0,0,.3);
}
.nav-link {
	display: block;
	margin-right: 5px;
	text-decoration: none;
	padding: 10px 22px;
	border-bottom: 1px solid #444;
}
[role="navigation"] li:last-child .nav-link{
	border-bottom: none;
}
.nav-link, .nav-link .iconic {
	color: #999;
	font-size: 22px;
	padding-right: 5px;	
}
.nav-link .iconic {
	font-size: 16px;
}
.nav-link:hover,
.nav-link .iconic:hover {
	color: #fff;
}

[role="main"] {
	clear: both;
	padding-bottom: 50px;
}
.container {

}
.wrap {
	max-width: 1040px;
	margin-left: auto;
	margin-right: auto;	
	padding-left: 5%;
	padding-right: 5%;
	position: relative;	
}
#site-header {
	border-bottom: 1px solid #ccc;
	box-shadow: 0 0 12px rgba(0,0,0,.075);	
	background-color: #f7f7f7;
  background-image: url(images/fallback-gradient.png); 
  background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#f7f7f7), to(#eaeaea));
  background-image: -webkit-linear-gradient(top, #f7f7f7, #eaeaea); 
  background-image:    -moz-linear-gradient(top, #f7f7f7, #eaeaea);
  background-image:     -ms-linear-gradient(top, #f7f7f7, #eaeaea);
  background-image:      -o-linear-gradient(top, #f7f7f7, #eaeaea);
	position: relative;
}
.header-wrap {
	padding: 15px 5%;	
}
.search-input {
	border-radius: 50px;
	padding: 9px 20px 9px 30px;
	border: 1px solid #ddd;
	box-shadow: inset 0 2px 2px rgba(0,0,0,.05);
	background: #fff url("/images/search.png") no-repeat 5px 50%;
	width: 220px;
	float: right;
	position: relative;
	top: 10px;
	right: 0;
}
