date {
	font-family: "proxima-nova-condensed";
	display: block;
	color: #999;
}
.article-title {
	font-family: "proxima-nova-condensed";
	font-size: 26px;
	line-height: 40px;
	margin: .6em 0;
	clear: both;	
}
.article-title {
	color: #500000;
}
.entry-content p {
	font-size: 16px;
	line-height: 22px;	
	margin: 1.2em 0;
}
.entry-content em {
	font-style: italic;
}
.entry-content p.light {
	font-weight: 300;
	font-size: 24px;
	line-height: 29px;
}
.entry-content p.big {
	font-size: 20px;
	line-height: 24px;
}
.entry-content h2 {
	font-weight: 500;
	font-size: 22px;
	line-height: 22px;
	margin-bottom: 10px;
}
.entry-content p {
	margin: 1.2em 0;
}	
.entry-content ul,
.archive-grid ul {
	list-style: none;
}
.entry-content li {
	padding: .2em 0;
	font-size: 16px;
}
.archive-grid ul li a {
	padding: 1em .75em;
	-webkit-transition: none;
}
.archive-grid ul li:nth-child(odd) a {
	background: #f9f9f9;
}
p.big-text {
	font-size: 46px;
	line-height: 50px;
}
.entry-meta {
	padding-top: 2em;
	padding-bottom: 2em;	
}
.entry-meta a {
	color: #999;
	text-decoration: none;
}
.entry-content .article-tags p {
	float: left;
	margin: 0 15px 0 0;	
}
.article-tags ul {
	float: left;
}
.entry-content .article-tags li {
	float: left;
	margin: 0 15px 0 0;
	padding: .25em 0;
	display: block;		
}
.entry-meta a:hover {
	color: #555;
}
/* -- Buttons -- */
.entry-content .button {
	margin: 0 1em 2em 0;
	float: left;
	padding: .5em 1em;
	color: #555;
	border-radius: 3px;
	text-shadow: 0 1px 0 rgba(255,255,255,.5);
	box-shadow: inset 0 0 7px rgba(255,255,255,.9);
	text-decoration: none;	
}
.leadin-wrap {
	float: right;
	width: 100%;
	overflow: hidden;
	margin-bottom: 2%;
}
.leadin-link {
	position: relative;
	overflow: hidden;
	display: block;
	text-decoration: none;
}
.leadin-img {
	max-width: 100%;	
	display: block;
	overflow: hidden;	
}
